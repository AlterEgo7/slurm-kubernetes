# ## Configure 'ip' variable to bind kubernetes services on a
# ## different ip than the default iface
gluster1 ansible_host=192.168.62.101 ansible_user=ubuntu ip=192.168.62.101 flannel_interface=192.168.62.101 flannel_backend_type=host-gw
gluster2 ansible_host=192.168.62.102 ansible_user=ubuntu ip=192.168.62.102 flannel_interface=192.168.62.102 flannel_backend_type=host-gw
gluster3 ansible_host=192.168.62.103 ansible_user=ubuntu ip=192.168.62.103 flannel_interface=192.168.62.103 flannel_backend_type=host-gw
gluster4 ansible_host=192.168.62.104 ansible_user=ubuntu ip=192.168.62.104 flannel_interface=192.168.62.104 flannel_backend_type=host-gw
