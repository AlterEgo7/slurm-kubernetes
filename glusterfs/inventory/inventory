# ## Configure 'ip' variable to bind kubernetes services on a
# ## different ip than the default iface
node1 ansible_ssh_host=192.168.62.101 ansible_ssh_user=ubuntu ip=192.168.62.101 flannel_interface=192.168.62.101 flannel_backend_type=host-gw
node2 ansible_ssh_host=192.168.62.102 ansible_ssh_user=ubuntu ip=192.168.62.102 flannel_interface=192.168.62.102 flannel_backend_type=host-gw
node3 ansible_ssh_host=192.168.62.103 ansible_ssh_user=ubuntu ip=192.168.62.103 flannel_interface=192.168.62.103 flannel_backend_type=host-gw
node4 ansible_ssh_host=192.168.62.104 ansible_ssh_user=ubuntu ip=192.168.62.104 flannel_interface=192.168.62.104 flannel_backend_type=host-gw
